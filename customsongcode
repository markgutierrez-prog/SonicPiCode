  use_synth :piano
  play :fs4, sustain: 2
  play :cs4, sustain: 2
  play :a3, sustain: 2
  sleep 2
  play :g4, sustain: 2
  play :d4, sustain: 2
  play :b3, sustain: 2
  sleep 2
  play :a4, sustain: 2
  play :e4, sustain: 2
  play :cs4, sustain: 2
  sleep 2
  play :g4, sustain: 2
  play :d4, sustain: 2
  play :b3, sustain: 2
  sleep 2
end
